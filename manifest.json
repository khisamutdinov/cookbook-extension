{
  "manifest_version": 3,
  "name": "Recipe Extractor",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "https://cookbook-577683305271.us-west1.run.app/*"
  ],
  "host_permissions": ["https://cookbook-577683305271.us-west1.run.app/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "main.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
